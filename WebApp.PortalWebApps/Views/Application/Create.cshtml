@model PortalWebApps.WebApp.Models.ViewModels.ApplicationViewModel
@{
    ViewBag.Title = "Cadastro de Aplicações";
    string message = TempData["Message"] as string ?? string.Empty, status = TempData["Status"] as string ?? string.Empty;
}

<div class="mb-3">
    <div class="border-bottom border-secondary border-opacity-50 mb-2">
        <h3>@ViewBag.Title</h3>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="mb-3">
            <div class="alert alert-@status alert-dismissible fade show" role="alert">
                @message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <div class="mb-3">
        @using (Html.BeginForm("Create", "Application", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()


            <div class="d-flex gap-1 mb-4">
                <button class="btn btn-sm btn-primary px-3" type="submit">
                    <i class="bi bi-save"></i> Salvar
                </button>
                <a asp-controller="Application" asp-action="Index" class="btn btn-sm btn-secondary px-3">
                    <i class="bi bi-arrow-counterclockwise"></i> Voltar
                </a>
            </div>
        }
    </div>
</div>